
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  papers    Paper[]

  @@map("users")
}

model Paper {
  id            String   @id @default(uuid())
  title         String
  authors       String?
  summary       String   @db.Text
  keywords      String[]
  category      String
  fileName      String
  filePath      String
  fileSize      Int
  uploadedAt    DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fullText      String?  @db.Text
  publicationYear Int?
  journal       String?
  doi           String?
  blobUrl       String?  // URL to Vercel Blob storage, if uploaded there

  @@map("papers")
  @@index([userId])
  @@index([category])
  @@index([uploadedAt])
}
