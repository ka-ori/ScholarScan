{
  "buildCommand": "cd frontend && npx vite build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install --prefix api && cd frontend && npm install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
